-- 创建图书价目表
CREATE TABLE SPRING_TX_BOOKPRICELIST(
	ID NUMBER(8),
	BOOKSERIALNO VARCHAR2(24),
	BOOKPRICE NUMBER(8)
);

-- 创建图书仓库表
CREATE TABLE SPRING_TX_BOOKWAREHOUSE(
	ID NUMBER(8),
	BOOKSERIALNO VARCHAR2(24),
	BOOKREPERTORY NUMBER(8)
);

-- 创建用户表
CREATE TABLE SPRING_TX_USER(
	ID NUMBER(8),
	USERNAME VARCHAR2(24),
	USERBALANCE NUMBER(8)
);

--添加图书价目测试数据
INSERT INTO SPRING_TX_BOOKPRICELIST ( ID, BOOKSERIALNO, BOOKPRICE ) VALUES ( 1, '1001', 60 );
INSERT INTO SPRING_TX_BOOKPRICELIST ( ID, BOOKSERIALNO, BOOKPRICE ) VALUES ( 2, '1002', 100 );
--添加图书仓库测试数据
INSERT INTO SPRING_TX_BOOKWAREHOUSE ( ID, BOOKSERIALNO, BOOKREPERTORY ) VALUES ( 1, '1001', 10 );
INSERT INTO SPRING_TX_BOOKWAREHOUSE ( ID, BOOKSERIALNO, BOOKREPERTORY ) VALUES ( 2, '1002', 2 );
--添加用户测试数据
INSERT INTO SPRING_TX_USER ( ID, USERNAME, USERBALANCE ) VALUES ( 1, 'CBW', 1000 );
INSERT INTO SPRING_TX_USER ( ID, USERNAME, USERBALANCE ) VALUES ( 2, 'CD', 8500 );